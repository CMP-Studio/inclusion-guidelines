%header.site-header
  .container
    %a{:href => "#content", :id => "skip-nav", :class => "screenreader-text"} Skip to Content

    = image_tag('/assets/images/innovation-studio-text.svg', alt: 'Innovation Studio Logo', class: 'innovation-logo-head')

    %h1.site-name
      %a{:href => "/"} Web Accessibility Guidelines <span class=screenreader-text> Foundations - Overview</span>

    %section.mobile-navigation
      %button.side-nav-trigger{ :"aria-expanded" => "false"}
        %span.icon-menu
        %span.trigger-status.screenreader-text.closed Open
        Menu

    = partial 'partials/primary-navigation'
