<%= Rouge::Themes::Base16::Monokai.render(:scope => '.highlight') %>

.highlight {
  margin-bottom: 2.0em;
  width:100%;
  max-width:100%;
  overflow: auto;
}

.highlight table td {
  vertical-align: top;
}

.highlight .code {
  font-family: monospace;
  font-size: 1.15em;
}

p code,
.inline-snippet {
  background-color: #F8F8F2;
  border: 1px #ccc solid;
  border-radius: 4px;
  display: inline;
  font-family: monospace;
  font-size: 1.15em;
  margin: 0 3px 0 1px;
  padding: 1px 5px 2px 5px;
  position: relative;
  top: -1px;
  white-space: nowrap;
}

ul li code,
.inline-snippet {
  background-color: #F8F8F2;
  border: 1px #ccc solid;
  border-radius: 4px;
  display: inline;
  font-family: monospace;
  font-size: 1.15em;
  margin: 0 3px 0 1px;
  padding: 1px 5px 2px 5px;
  position: relative;
  top: -1px;
}
